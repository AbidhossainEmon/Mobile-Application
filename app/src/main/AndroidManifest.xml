<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.emon.tourmate">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LogIn_Activity"
              android:label="Tour Mate">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUp_Activity"
            android:label="Tour Mate"/>
        <activity
            android:name=".MainActivity"
            android:label="Tour Mate"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".EventDetailsActivity"
            android:label="Event Details"/>
        <activity android:name=".WeatherActivity"
            android:label="Weather"/>
        <activity android:name=".NearbyPlaceActivity"
            android:label="Nearby Place"/>
        <activity android:name=".PhotoMomentsActivity"
            android:label="Photo Moments">

        </activity>
    </application>

</manifest>