<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@drawable/gradient_background1"
    android:orientation="vertical"
    android:padding="10dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="55dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create An Event"
            android:textColor="#3366ff"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/TourNameTvid"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:hint="Your Tour name"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@drawable/customedittext"
            android:layout_margin="3dp"/>
        <EditText
            android:id="@+id/startingPlaceTvid"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:hint="Starting Place"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@drawable/customedittext"
            android:layout_margin="3dp"/>
        <EditText
            android:id="@+id/destinationTvid"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="Your Destination"
            android:gravity="center"
            android:background="@drawable/customedittext"
            android:layout_margin="3dp"/>
        <EditText
            android:id="@+id/startDateTvid"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="Startin Date"
            android:gravity="center"
            android:background="@drawable/customedittext"
            android:layout_margin="3dp"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"/>
        <EditText
            android:id="@+id/endDateTvid"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="Ending Date"
            android:gravity="center"
            android:background="@drawable/customedittext"
            android:layout_margin="3dp"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"
        />
        <EditText
            android:id="@+id/budgetTvid"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="Your Budget"
            android:gravity="center"
            android:background="@drawable/customedittext"
            android:layout_margin="3dp"
            android:inputType="number"/>


    </LinearLayout>



    <Button
        android:id="@+id/createEventbtnid"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/custombutton"
        android:foreground="?attr/selectableItemBackground"
        android:text="create Event"
        android:textColor="#000" />

</LinearLayout>