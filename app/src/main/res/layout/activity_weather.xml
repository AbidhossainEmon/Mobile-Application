<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WeatherActivity"
    android:background="@drawable/after_noon2"
   >
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="30sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="right">



                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_wb_sunny_black_24dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/temptvId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="30 C"
                    android:textSize="35dp"
                    android:gravity="right"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">
                    <TextView
                        android:layout_weight=".7"
                        android:id="@+id/citytvid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Dhaka"
                        android:textSize="20dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/destvid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sky is Clear"
                    android:textSize="18dp"
                    android:gravity="right"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            >
            <LinearLayout
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_weight=".6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Max: "
                    android:textSize="15dp"
                    android:gravity="right"
                    />
                <TextView
                    android:id="@+id/maxtemptvid"
                    android:layout_weight=".4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="20c "
                    android:textSize="15dp"
                    android:gravity="left"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Min: "
                    android:textSize="15dp"
                    android:gravity="right"
                    />
                <TextView
                    android:id="@+id/mintemptvid"
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="20c "
                    android:textSize="15dp"
                    android:gravity="left"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/humidityTvid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Humidity: 100%"
            android:textSize="20dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/cloudsTvid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clouds: 0%"
            android:textSize="20dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wind"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/windspeedtvid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="speed: 5.55meter/sec"
            android:textSize="17dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/windderectiontvid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direction 311 degrees"
            android:textSize="17dp"
            android:gravity="center"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pressure"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/atmpressuretvid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ATM Pressure: 1013.3hPa"
            android:textSize="17dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/sealavepresstvid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sea_level: 10011hPa"
            android:textSize="17dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/grnpresstvid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ground_level: 10011hPa"
            android:textSize="17dp"
            android:gravity="center"/>
    </LinearLayout>




</LinearLayout>